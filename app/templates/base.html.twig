<!doctype html>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta
		name="viewport" content="width=device-width, initial-scale=1">

		<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

		<title>
			{% block title %}{% endblock %}
			&nbsp- SymfonyBank</title>
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<div class="container">
			<div class="row mt-5">
				<div class="col-md-12">

					<div class="row">
						<div class="col-md-12">
							<a href="{{ path('persons') }}" class="btn btn-secondary btn-lg pull-right">
								{% trans from 'base' %}
								base.header.people
								{% endtrans %}
							</a>
							<a href="{{ path('account') }}" class="btn btn-secondary btn-lg pull-right">
								{% trans from 'base' %}
								base.header.accounts
								{% endtrans %}
							</a>
							<a href="{{ path('create_transaction') }}" class="btn btn-secondary btn-lg pull-right">
								{% trans from 'base' %}
								base.header.banking_movement
								{% endtrans %}
							</a>
						</div>
					</div>
					<br><br>

					{% for flashMessage in app.session.flashbag.get('success') %}
						<div class="alert alert-success">
							{{ flashMessage }}
						</div>
					{% endfor %}

					{% for flashMessage in app.session.flashbag.get('warning') %}
						<div class="alert alert-warning">
							{{ flashMessage }}
						</div>
					{% endfor %}

					{% block body %}{% endblock %}
				</div>
			</div>
		</div>

		<!-- Option 1: Bootstrap Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
		<script type="text/javascript" src="https://kit.fontawesome.com/332c7fbc45.js"></script>

		{% block javascripts %}{% endblock %}
	</body>
</html>
